<Page
    x:Class="Roadie_UWP_MLB.Views.Preferences"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Roadie_UWP_MLB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#C1CAD6"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel x:ConnectionId='2'
                x:Name="Personal_Info"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#C1CAD6"
                Orientation="Vertical">

                <Image
                    Width="325"
                    Height="157"
                    Source="../Assets/Roadie_Logo_Blue.png" />


                <Image
                    Width="150"
                    Height="100"
                    Source="../Assets/road2.png" />

                <TextBlock
                    Padding="0,10,0,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FocusVisualPrimaryBrush="#FF2A295C"
                    FontFamily="Arial"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="#FF2A295C"
                    Text="Preferences" />


                <TextBlock
                    Padding="0,10,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FocusVisualPrimaryBrush="#FF2A295C"
                    FontFamily="Arial"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FF2A295C"
                    Text="Accomodations Offered" />

                <StackPanel Width="250" Margin="10,3,0,0">
                    <CheckBox x:ConnectionId='7' x:Name="petsCheckbox" Content="My Vehicle Allows Pets" />
                    <CheckBox x:ConnectionId='8' x:Name="wheelchairCheckbox" Content="My Vehicle Has Wheelchair Access" />
                    <CheckBox x:ConnectionId='9' x:Name="carseatCheckbox" Content="My Vehicle Is Carseat Friendly" />


                </StackPanel>

                <TextBox x:ConnectionId='3'
                    x:Name="MusicPreferences"
                    Width="250"
                    Margin="25,10,25,10"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    InputScope="Default"
                    PlaceholderForeground="#FF515050"
                    PlaceholderText="Music Preferences" />

                <TextBox x:ConnectionId='4'
                    x:Name="SportsInterest"
                    Width="250"
                    Margin="25,0,25,10"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    InputScope="Default"
                    PlaceholderForeground="#FF515050"
                    PlaceholderText="Sport Interests" />

                <StackPanel
                    Height="75"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

                    <Button x:ConnectionId='5'
                        x:Name="Btn_Back"
                        Width="55"
                        Height="55"
                        HorizontalAlignment="Left"
                        Background="White"
                        BorderBrush="#2a295c"
                        BorderThickness="1"
                                              >

                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Assets/arrow.png" Stretch="Fill" />
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='6'
                        x:Name="LetsRide_Btn"
                        Width="275"
                        Height="55"
                        Margin="10"
                        Background="#FF206EB0"
                        BorderBrush="#2a295c"
                        BorderThickness="1"
                                                  
                        FocusVisualPrimaryBrush="#FF2A295C"
                        FontFamily="Arial Black"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Padding="0,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FocusVisualPrimaryBrush="#FF2A295C"
                                FontFamily="Arial"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Let's Ride !" />
                            <Image
                                Width="45"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                Source="../Assets/right_arrow.png" />

                        </StackPanel>
                    </Button>



                </StackPanel>

            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>

